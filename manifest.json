{
    "manifest_version": 2,
    "name": "Korailer",
    "version": "1.3",
    "permissions": [
        "tabs",
        "notifications",
        "activeTab"        
      ],
    "content_scripts": [
        {
            "matches": [                
                "https://etk.srail.co.kr/hpg/hra/01/selectScheduleList.do?pageId=TK0101010000"
            ],
            "css":["srt.css"],
            "js": ["utils.js","srt.js"],
            "all_frames": true
        },
        {
            "matches": [
            "http://www.letskorail.com/ebizprd/EbizPrdTicketPr21111_i1.do"
            ],
            "css":["ktx.css"],
            "js": ["utils.js", "ktx.js"],
            "all_frames": true
        }        
    ],
    "browser_action": {
        "default_icon": "main-icon.png"
    },
    "icons": {
        "16": "main-icon.png",
        "48": "main-icon.png", 
        "128": "main-icon.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "web_accessible_resources": [
        "favicon.ico",
        "main-icon.png",
        "tada.mp3",
        "dundun.mp3"
    ]
  }